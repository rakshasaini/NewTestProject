#Ruby naming rules
https://github.com/rubocop/ruby-style-guide

puts "hello"
class Student

  attr_accessor :first_name, :last_name, :email, :age, :user_name, :password
  #these are attributes. Attributes of a class are identiy of that class
  @first_name
  @last_name
  @email
  @age
  @user_name
  @password  

  # def first_name(name)
  #   @first_name = name
  # end

  #first_name equal method
  #setter method
  def first_name=(name)
    @first_name = name
  end

  #first_name accessor method
  #This is my getter
  def first_name
    @first_name
  end

  def to_s
    "First name #{@first_name}"
  end
end
ram = Student.new
# puts ram
ram.first_name = "RAKSHA"
# ram.first_name("RAM")
puts ram

